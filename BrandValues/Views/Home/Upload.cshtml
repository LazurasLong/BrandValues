@model BrandValues.Entries.PostEntry
@{
    ViewBag.Title = "Upload";
}

<script>
    var uploaded = '@ViewBag.Uploaded';
</script>

<section>

    <section class="vbox">
        <section class="relativescroll scrollable padder-lg w-f-md">
            <div class="m-b-md">
                <h3 class="m-b-none">Upload your Individual or Team Competition Entry</h3>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { id = "wizardform", enctype = "multipart/form-data", data_parsley_validate="" }))
                    {
                        
                        @Html.AntiForgeryToken()
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <ul class="nav nav-tabs font-bold">
                                    <li><a href="#step1" data-toggle="tab">Step 1: Your Details</a></li>
                                    <li><a href="#step2" data-toggle="tab">Step 2: Upload</a></li>
                                    <li><a href="#step3" data-toggle="tab">Step 3: Finish</a></li>
                                </ul>
                            </div>
                            <div class="panel-body">

                                <h4>Your progress</h4>
                                <div class="progress progress-xs m-t-md">
                                    <div class="progress-bar bg-success"></div>
                                </div>
                                <div class="line line-lg"></div>
                                   <h1>@ViewBag.Message</h1> 
                                   <div class="line line-lg"></div>
                                <div class="tab-content">
                                    <div id="loading" class="centered">
                                        <p align="center">
                                            <img src="~/images/ajax-loader.gif" alt="" />
                                        </p>
                                    </div>

                                    <div class="tab-pane" id="step1">

                                        <div class="form-group">
                                            <label class="col-sm-4 control-label">Entry Name</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control parsley-validated" data-trigger="change" data-required="true" data-parsley-type="alphanum" placeholder="Your entry name">
                                                @*@Html.EditorFor(model => model.Name, new { @class = "form-control" })*@
                                                <span class="help-block m-b-none">@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger top-padding" })</span>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>

                                        <div class="form-group">
                                            <label class="col-sm-4 control-label">
                                                @Html.LabelFor(model => model.Description)
                                            </label>
                                            <div class="col-sm-8">
                                                <textarea class="form-control parsley-validated" rows="6" data-minwords="6" data-maxlength="600" data-required="true" placeholder="Type a short description of your entry"></textarea>
                                                @*@Html.TextAreaFor(model => model.Description, new { @class = "form-control" })*@
                                                <span class="help-block m-b-none">@Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger top-padding" })</span>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>

                                        <div class="form-group">
                                            <label class="col-sm-4 control-label">
                                                Type
                                            </label>
                                            <div class="col-sm-8">
                                                <select name="@Model.Type" class="form-control m-t">
                                                    <option value="individual">Individual</option>
                                                    <option value="team">Team</option>
                                                </select>
                                                <span class="help-block m-b-none">@Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger top-padding" })</span>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>

                                        <div class="form-group">
                                            <label class="col-sm-4 control-label">
                                                Format
                                            </label>
                                            <div class="col-sm-8">
                                                <select name="@Model.Format" class="form-control m-t">
                                                    <option value="text">Poem / Story / Lyric</option>
                                                    <option value="video">Video</option>
                                                    <option value="image">Image</option>
                                                </select>
                                                <span class="help-block m-b-none">@Html.ValidationMessageFor(m => m.Format, "", new { @class = "text-danger top-padding" })</span>
                                            </div>
                                        </div>

                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        <div class="form-group">
                                            <label class="col-sm-4 control-label">Which AIB Values are demonstrated?</label>
                                            <div class="col-sm-8">

                                                <div class="checkbox i-checks">
                                                    <label>
                                                        <input name="@Model.Values" type="checkbox" id="chkAll" value="all">
                                                        <i></i>
                                                        All the brand values
                                                    </label>
                                                </div>
                                                <div class="checkbox i-checks">
                                                    <label>
                                                        <input type="checkbox" name="@Model.Values" value="customers">
                                                        <i></i>
                                                        We put our customers first
                                                    </label>
                                                </div>
                                                <div class="checkbox i-checks">
                                                    <label>
                                                        <input type="checkbox" name="@Model.Values" value="empowering">
                                                        <i></i>
                                                        We are empowering
                                                    </label>
                                                </div>
                                                <div class="checkbox i-checks">
                                                    <label>
                                                        <input type="checkbox" name="@Model.Values" value="trust">
                                                        <i></i>
                                                        We are building trust and appreciation
                                                    </label>
                                                </div>
                                                <div class="checkbox i-checks">
                                                    <label>
                                                        <input type="checkbox" name="@Model.Values" value="simple">
                                                        <i></i>
                                                        We keep things simple
                                                    </label>
                                                </div>
                                                <div class="checkbox i-checks">
                                                    <label>
                                                        <input type="checkbox" name="@Model.Values" value="together">
                                                        <i></i>
                                                        We are better together
                                                    </label>
                                                </div>
                                                <span class="help-block m-b-none">@Html.ValidationMessageFor(m => m.Values, "", new { @class = "text-danger top-padding" })</span>
                                            </div>
                                        </div>
                                        
                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        
                                        <div class="form-group">
                                            <label class="col-sm-4 control-label">
                                                
                                            </label>
                                            <div class="col-sm-8">
                                                <input type="checkbox" name="check" checked data-required="true"><i></i> I agree to the <a href="#" class="text-info">Terms & Conditions</a>
                                            </div>
                                        </div>
                                        
                                        <input type="submit" id="upload" value="Upload" />
                                        
                                        <div class="line line-dashed b-b line-lg pull-in"></div>

                                        
                                    </div>
                                    <div class="tab-pane" id="step2">
                                        
                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        

                                        <div class="form-group">
                                            
                                            <div class="centered">
                                                <input type="file" name="files" class=" filestyle" data-icon="false" data-classbutton="btn btn-default" value="" multiple="multiple" data-classinput="form-control inline v-middle input-s" id="filestyle-0" style="position: fixed; left: -500px;">
                                                <div class="bootstrap-filestyle" style="display: inline;"><input type="text" class="form-control inline v-middle input-s" disabled=""> 
                                                    <label for="filestyle-0" class="btn btn-default"><span>Choose file</span></label>
                                                </div>
                                            </div>

                                            
                                        </div>
                                        
                                        <div class="line line-dashed b-b line-lg pull-in"></div>
                                        
                                        <label class="col-sm-4 control-label" for="file">Your File to Upload</label>
                                        <div class="col-sm-8">

                                            <input type="file" id="uploadFiles" name="files" value="" multiple="multiple" />
                                            <input type="submit" id="upload" value="Upload" />


                                        </div>
                                        
                                        <div class="line line-dashed b-b line-lg pull-in"></div>

                                    </div>

                                    <div class="tab-pane" id="step3">
                                        
                                        <h1>Congrats</h1>

                                    </div>

                                    <ul class="pager wizard m-b-sm">
                                        <li class="previous first" style="display: none;"><a href="#">First</a></li>
                                        <li class="previous"><a href="#">Previous</a></li>
                                        <li class="next last" style="display: none;"><a href="#">Last</a></li>
                                        <li class="next"><a href="#">Next</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </section>
    </section>

</section>

@section Scripts {
    @Scripts.Render("~/Bundles/upload")
}
