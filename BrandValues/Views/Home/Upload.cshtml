                                </div>*@



                            <span class="help-block m-b-none">@Html.ValidationMessageFor(m => m.Values, "", new { @class = "text-danger top-padding" })</span>
                        </div>
                    </div>


                    <div class="line line-dashed b-b line-lg pull-in"></div>


                </div>
                <div class="tab-pane" id="step2">

                    <div class="line line-dashed b-b line-lg pull-in"></div>


                    <div class="form-group">

                        <div class="centered center">
                            <input type="file" name="files" class=" filestyle" data-icon="false" data-classbutton="btn btn-default" value="" data-classinput="form-control inline v-middle input-s" id="filestyle-0" style="position: fixed; left: -500px;">
                            @*<div class="bootstrap-filestyle" style="display: inline;">
                                    <input type="text" class="form-control inline v-middle input-s" disabled="">
                                    <label for="filestyle-0" class="btn btn-default"><span>Choose file</span></label>
                                </div>*@
                        </div>


                    </div>

                    <div class="line line-dashed b-b line-lg pull-in"></div>

                    @*<label class="col-sm-4 control-label" for="file">Your File to Upload</label>
                        <div class="col-sm-8">

                            <input type="file" id="uploadFiles" name="files" value="" multiple="multiple" />

                        </div>*@
                    <div class="centered center">
                        <input type="submit" class="btn btn-primary btn-lg btn-block" id="upload" value="Upload" />
                    </div>



                    <div class="line line-dashed b-b line-lg pull-in"></div>

                </div>

                <div class="tab-pane" id="step3">



                </div>

                <ul id="pager" class="pager wizard m-b-sm">
                    <li class="previous first" style="display: none;"><a href="#">First</a></li>
                    <li class="previous"><a href="#">Previous</a></li>
                    <li class="next last" style="display: none;"><a href="#">Last</a></li>
                    <li class="next"><a href="#">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
