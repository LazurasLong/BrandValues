@using BrandValues.Entries
@model BrandValues.Models.BrowseViewModel

@if (Model != null)
{

    <div class="row">
        <h3 class="font-thin m-b text-primary inline" id="team">Team Entries</h3>
    </div>
    if (Model.TeamEntries.Count() > 6)
    {
        foreach (var entry in Model.TeamEntries)
        {

            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                <div class="item">
                    <div class="pos-rlt entry-icon">
                        <a href="@Url.Action("Play", "Home", new { id = entry.Id })"><img src="@Html.DisplayFor(modelItem => entry.ThumbnailUrl)" alt="Competition Entry" class="r r-2x img-full"></a>
                    </div>
                    <div class="padder-v entry-icon-padder">
                        <span class="pull-right badge bg-white">
                            <i class="fa fa-thumbs-o-up text"></i>

                            @if (ViewBag.Voting)
                            {
                                @entry.Votes.Count
                            }
                            else
                            {
                                @entry.Likes.Count
                            }

                        </span>


                        <a href="@Url.Action("Play", "Home", new { id = entry.Id })" class="text-ellipsis">@Html.DisplayFor(modelItem => entry.Name)</a>
                        <span class="text-ellipsis text-xs text-muted">
                            @if (entry.Type == "individual")
                            {
                                var space = "&nbsp;";
                                @Html.DisplayFor(modelItem => entry.UserFirstName)
                                @Html.Raw(space)
                                @Html.DisplayFor(modelItem => entry.UserSurname)
                                <br />@Html.DisplayFor(modelItem => entry.UserArea)
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => entry.TeamName)
                                <br />@Html.DisplayFor(modelItem => entry.UserArea)
                            }
                        </span>
                    </div>
                </div>
            </div>


        }
    }
    else
    {
        foreach (var entry in Model.TeamEntries)
        {

            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-4">
                <div class="item">
                    <div class="pos-rlt entry-icon">
                        <a href="@Url.Action("Play", "Home", new { id = entry.Id })"><img src="@Html.DisplayFor(modelItem => entry.ThumbnailUrl)" alt="Competition Entry" class="r r-2x img-full"></a>
                    </div>
                    <div class="padder-v entry-icon-padder">
                        <span class="pull-right badge bg-white">
                            <i class="fa fa-thumbs-o-up text"></i>

                            @if (ViewBag.Voting)
                            {
                                @entry.Votes.Count
                            }
                            else
                            {
                                @entry.Likes.Count
                            }

                        </span>
                        <a href="@Url.Action("Play", "Home", new { id = entry.Id })" class="text-ellipsis">@Html.DisplayFor(modelItem => entry.Name)</a>
                        <span class="text-ellipsis text-xs text-muted">
                            @if (entry.Type == "individual")
                            {
                                var space = "&nbsp;";
                                @Html.DisplayFor(modelItem => entry.UserFirstName)
                                @Html.Raw(space)
                                @Html.DisplayFor(modelItem => entry.UserSurname)
                                <br />@Html.DisplayFor(modelItem => entry.UserArea)
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => entry.TeamName)
                                <br />@Html.DisplayFor(modelItem => entry.UserArea)
                            }
                        </span>
                    </div>
                </div>
            </div>


        }
    }

    if (!Model.TeamEntries.Any())
    {
        <span class="h3 font-thin">There are no team entries for this specific Brand Value.</span><p>@Html.ActionLink("Click here", "Upload", null, new { @class = "text-info" }) to become the first to upload one.</p>

    }



}
