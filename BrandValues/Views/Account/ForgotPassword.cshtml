@model BrandValues.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <section id="loginForm">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <p class="text-center">
                    <img src="~/images/aib-logo-large.png" alt="AIB Logo" />
                </p>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group centered">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Your AIB Email", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @type = "email", @class = "text-danger top-padding" })
                </div>
                <p class="text-center centered">
                    <button type="submit" class="btn btn-info lt b-2x btn-block btn-rounded"><i class="icon-arrow-right pull-right"></i><span class="m-r-n-lg">Reset</span></button>
                </p>
            }
        </section>
        <p class="text-center">
            @Html.ActionLink("Remember it? Login here", "Login", null, new { @class = "link-light" })
        </p>
    </div>
    <div class="col-md-7">

        <h1 class="largest-text purple">Forgot your<br/>password?</h1>
        <hr />
        <h3 class="large-text dark-grey">No problem, enter your AIB email to reset it!</h3>
    </div>
</div>
