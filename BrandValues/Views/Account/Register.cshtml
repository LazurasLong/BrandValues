@model BrandValues.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <section id="loginForm">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <p class="text-center">
                    <img src="~/images/aib-logo-large.png" alt="AIB Logo" />
                </p>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group centered">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @type = "email", @class = "text-danger top-padding" })
                </div>
                <div class="form-group centered">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Create a new Password", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @type = "password", @class = "text-danger top-padding" })
                </div>
                <div class="form-group centered">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm above Password", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @type = "password", @class = "text-danger top-padding" })
                </div>
                <div class="form-group centered">
                    <label class="col-sm-4 control-label">Select your area</label>
                    <div class="col-sm-8">
                        @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "COO Domain",
                    Value = "COO Domain",
                    Selected = true
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Leadership Team",
                    Value = "Leadership Team"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Products",
                    Value = "Products"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "PB & CB - Head Office",
                    Value = "PB & CB - Head Office"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "PB & CB - Branches",
                    Value = "PB & CB - Branches"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "First Trust",
                    Value = "First Trust"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "AIB UK",
                    Value = "AIB UK"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Corporate Affairs & Strategy",
                    Value = "Corporate Affairs & Strategy"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "FSG",
                    Value = "FSG"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "HR",
                    Value = "HR"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Risk",
                    Value = "Risk"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Finance",
                    Value = "Finance"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Group Internal Audit",
                    Value = "Group Internal Audit"
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Legal",
                    Value = "Legal"
                });
                        }
                        @Html.DropDownListFor(model => model.Area, listItems, new { @class = "form-control m-b" })
                    </div>

                </div>

    <p class="text-center margin-bottom-20">
        <input id="terms" type="checkbox" name="check" checked><i></i> I agree to the  @Html.ActionLink("Terms & Conditions", "Terms", null, new { @class = "text-info", target = "_blank" })
    </p>


                <p class="text-center centered">
                    <button type="submit" id="submit" class="btn btn-info lt b-2x btn-block btn-rounded"><i class="icon-arrow-right pull-right"></i><span class="m-r-n-lg">Sign up</span></button>
                </p>
            }

        </section>



        <p class="text-center centered">
            @Html.ActionLink("Already registered?", "Login", null, new { @class = "btn btn-grey btn-block rounded" })
        </p>
    </div>
    <div class="col-md-7">

        <h1 class="largest-text purple">How registration<br/>works</h1>
        <hr />
        <h3 class="large-text dark-grey">Enter your AIB email address and a new password<br/>(not your AIB Network password..)</h3>
        <ul class="list-unstyled">
            <li><h4><i class="icon-check green list-icon"></i> We’ll send you an email</h4></li>
            <li><h4><i class="icon-check green list-icon"></i> Open your AIB email and click the registration link</h4></li>
            <li><h4><i class="icon-check green list-icon"></i> You’re good to go!</h4></li>
        </ul>
    </div>
</div>


<script>
    $("#terms").click(function () {
        if ($(this).is(":checked")) {
            $("#submit").removeAttr("disabled");
        } else {
            $("#submit").attr("disabled", "disabled");
        }
    });
</script>