@model BrandValues.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <section id="loginForm">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <p class="text-center">
                    <img src="~/Content/webapp/images/aib-logo-large.png" alt="AIB Logo" />
                </p>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                <div class="form-group centered">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @type = "email", @class = "text-danger top-padding" })
                </div>
                <div class="form-group centered">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @type = "password", @class = "text-danger top-padding" })
                </div>
                <div class="form-group centered">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @type = "password", @class = "text-danger top-padding" })
                </div>
                <p class="text-center centered">
                    <button type="submit" class="btn btn-info lt b-2x btn-block btn-rounded"><i class="icon-arrow-right pull-right"></i><span class="m-r-n-lg">Reset</span></button>
                </p>
            }
        </section>
    </div>
    <div class="col-md-7">
        <h1 class="largest-text purple">Reset your<br />password?</h1>
        <hr />
        <h3 class="large-text dark-grey">Choose a new password (not your AIB Network password..)</h3>
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
