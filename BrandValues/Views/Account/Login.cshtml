@model BrandValues.Models.LoginViewModel

@{
    ViewBag.Title = "Values Competition";
}

<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <p class="text-center">
                    <img src="~/images/aib-logo-large.png" alt="AIB Logo" />
                </p>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group centered">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @type = "email", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger top-padding" })
                </div>
                <div class="form-group centered">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @type = "password", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.Password, "", new {  @class = "text-danger top-padding" })
                </div>
                <p class="text-center centered">
                    <button type="submit" class="btn btn-info lt b-2x btn-block btn-rounded"><i class="icon-arrow-right pull-right"></i><span class="m-r-n-lg">Sign in</span></button>
                </p>

                <p class="text-center centered top-padding-10">
                    @Html.ActionLink("New? Register here", "Register", null, new { @class = "btn btn-warning btn-block rounded" })
                </p>

                <hr />
                <p class="text-center">
                    @Html.ActionLink("Forget your password?", "ForgotPassword", null, new { @class = "link-light" })
                </p>
            }
        </section>

        @*<p class="text-center centered">
            @Html.ActionLink("Sign up", "Register", null, new { @class = "btn btn-grey btn-block rounded" })
        </p>*@
    </div>
    <div class="col-md-7">
        @*<section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new BrandValues.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </section>*@
        
        <h1 class="largest-text purple">Welcome to the<br />AIB Brand Values Competition</h1>
        <hr/>
        <h3 class="large-text dark-grey">Show us what you can do</h3>
        <ul class="list-unstyled">
            <li><h4><i class="icon-camcorder green list-icon"></i> Budding film-maker? </h4></li>
            <li><h4><i class="icon-microphone green list-icon"></i> Secret poet?</h4></li>
            <li><h4><i class="icon-pencil green list-icon"></i> Writing genius?</h4></li>
        </ul>
        <p>This is your chance to show how you’re living our new brand values and win a cool prize!</p>
    </div>
</div>

<footer class="footer footer-md bg-white">
    <p class="small center">The personal information provided by you to AIB Group on this competition form will be held and used for the purpose of determining the competition winner(s) and publishing competition entries and may be retained by AIB Group thereafter for Brand Value marketing purposes. All personal information provided on this competition form will be subject to all AIB policies and standards and must not breach any person's rights in respect of privacy and data protection</p>
</footer>