@model BrandValues.Models.LoginViewModel

@{
    ViewBag.Title = "Values Competition";
}

<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <p class="text-center">
                    <img src="~/Content/webapp/images/aib-logo-large.png" alt="AIB Logo" />
                </p>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group centered">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @type="email", @class = "text-danger top-padding" })
                </div>
                <div class="form-group centered">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control input text-center" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @type = "password", @class = "text-danger top-padding" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>

                <p class="text-center centered">
                    <button type="submit" class="btn btn-info lt b-2x btn-block btn-rounded"><i class="icon-arrow-right pull-right"></i><span class="m-r-n-lg">Sign in</span></button>
                </p>

                <hr />
                <p class="text-center">
                    @Html.ActionLink("Forget your password?", "ForgotPassword", null, new { @class = "link-light" })
                </p>
            }
        </section>

        <p class="text-center centered">
            @Html.ActionLink("Sign up", "Register", null, new { @class = "btn btn-grey btn-block rounded" })
        </p>
    </div>
    <div class="col-md-7">
        @*<section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new BrandValues.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </section>*@
        
        <h1 class="largest-text purple">See the AIB Brand Values<br/>come to life, from anywhere</h1>
        <hr/>
        <h3 class="large-text dark-grey">Discover how your colleagues are living the values</h3>
        <ul class="list-unstyled">
            <li><h4><i class="icon-check green list-icon"></i> See, hear & read how teams/individuals are shaping the future</h4></li>
            <li><h4><i class="icon-check green list-icon"></i> Enter your own team/individual competition entry</h4></li>
            <li><h4><i class="icon-check green list-icon"></i> Have your say. Like, share & comment on the best entry</h4></li>
        </ul>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}